<div class="col-md-4">
    <img src="{{this.image_url}}" class="card-img img_randomBeer" alt="{{this.name}} ">
</div>
<div class="col-md-8">
    <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text"><small class="text-muted">{{this.tagline}}</small></p>
        <h6 class="card-title">Food Pairing</h6>
        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{else}}
            <li> listado no disponible</li>
            {{/each}}
        </ul>
        <p class="card-text">{{brewers_tips}}</p>
    </div>
</div>